{
  "name": "invoiceflow",
  "version": "1.0.0",
  "description": "InvoiceFlow - Smart, Simple Invoicing for modern businesses. Create professional invoices in minutes, send via email or WhatsApp, and get paid faster.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build:tailwind": "npx tailwindcss -i ./static/css/tailwind.input.css -o ./static/css/tailwind.output.css --minify",
    "watch:css": "npx tailwindcss -i ./static/css/tailwind.input.css -o ./static/css/tailwind.output.css --watch",
    "minify:js:app": "npx terser static/js/app.js -o static/js/app.min.js -c -m --source-map",
    "minify:js:landing": "npx terser static/js/landing.js -o static/js/landing.min.js -c -m --source-map",
    "minify:js": "npm run minify:js:app && npm run minify:js:landing",
    "minify:css:main": "npx postcss static/css/main.css -o static/css/main.min.css",
    "minify:css:components": "npx postcss static/css/components.css -o static/css/components.min.css",
    "minify:css:tokens": "npx postcss static/css/design-tokens.css -o static/css/design-tokens.min.css",
    "minify:css:responsive": "npx postcss static/css/responsive.css -o static/css/responsive.min.css",
    "minify:css:enhancements": "npx postcss static/css/enhancements.css -o static/css/enhancements.min.css",
    "minify:css:premium": "npx postcss static/css/premium-sections.css -o static/css/premium-sections.min.css",
    "minify:css": "npm run minify:css:main && npm run minify:css:components && npm run minify:css:tokens && npm run minify:css:responsive && npm run minify:css:enhancements && npm run minify:css:premium",
    "clean": "rm -f static/css/*.min.css static/js/*.min.js static/js/*.map",
    "build:prod": "npm run clean && npm run build:tailwind && npm run minify:js && npm run minify:css",
    "build": "npm run build:prod",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "dependencies": {
    "cssnano": "^7.1.2",
    "postcss-cli": "^11.0.1",
    "terser": "^5.44.1"
  }
}
