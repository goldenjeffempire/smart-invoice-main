[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Gunicorn Production Server"

[[workflows.workflow]]
name = "Gunicorn Production Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind=0.0.0.0:5000 --workers=2 --timeout=120 invoiceflow.wsgi:application"
