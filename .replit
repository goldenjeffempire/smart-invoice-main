modules = ["web", "nodejs-20", "bash", "python-3.11"]
[nix]
channel = "stable-25_05"
packages = ["awsebcli", "cairo", "cargo", "fontconfig", "freetype", "gdk-pixbuf", "ghostscript", "glib", "harfbuzz", "lcms2", "libffi", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "libyaml", "openjpeg", "openssl", "pango", "pgadmin4", "pkg-config", "rustc", "shared-mime-info", "tcl", "tk", "unzip", "zlib"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Gunicorn Production Server"

[[workflows.workflow]]
name = "Gunicorn Production Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn smart_invoice.wsgi:application --bind 0.0.0.0:5000 --workers 4 --timeout 30 --access-logfile - --error-logfile - --log-level info"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38587
externalPort = 5173

[[ports]]
localPort = 42013
externalPort = 3003

[[ports]]
localPort = 42193
externalPort = 3000

[[ports]]
localPort = 42431
externalPort = 4200

[[ports]]
localPort = 42533
externalPort = 3001

[[ports]]
localPort = 42587
externalPort = 5000

[[ports]]
localPort = 45037
externalPort = 3002

[userenv]

[userenv.shared]
SENDGRID_FROM_EMAIL = "team@smartinvoice.com"

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "smart_invoice.wsgi:application", "--bind", "0.0.0.0:5000", "--workers", "4", "--timeout", "30", "--access-logfile", "-", "--error-logfile", "-", "--log-level", "info"]
build = ["bash", "-c", "pip install -r requirements.txt && npm install && npm run build:prod && python manage.py collectstatic --noinput && python manage.py migrate"]
