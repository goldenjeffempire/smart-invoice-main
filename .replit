SENDGRID_FROM_EMAIL = "team@smartinvoice.com"

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "smart_invoice.wsgi:application", "--bind", "0.0.0.0:5000", "--workers", "4", "--timeout", "60", "--keep-alive", "5", "--max-requests", "1000", "--max-requests-jitter", "100", "--access-logfile", "-", "--error-logfile", "-", "--log-level", "info"]
build = ["bash", "-c", "pip install --upgrade pip && pip install -r requirements.txt && npm install && npm run build:prod && python manage.py migrate --noinput && python manage.py collectstatic --noinput --clear"]
