# Smart Invoice - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED FOR PRODUCTION
# ===========================================

# Django Secret Key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Encryption salt for sensitive data (generate with: python -c "import secrets; print(secrets.token_hex(32))")
ENCRYPTION_SALT=your-encryption-salt-here-CHANGE-THIS-IN-PRODUCTION

# Allowed Hosts (comma-separated domains)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,yourapp.onrender.com

# Database URL (automatically provided by Render, or set manually)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/smartinvoice

# ===========================================
# SECURITY & CSRF
# ===========================================

# CSRF Trusted Origins (comma-separated, include https://)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://*.onrender.com

# ===========================================
# EMAIL CONFIGURATION (SendGrid)
# ===========================================

# SendGrid API Key (get from https://sendgrid.com)
SENDGRID_API_KEY=your-sendgrid-api-key

# SendGrid From Email
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# SendGrid Template IDs (optional, for transactional emails)
SENDGRID_INVOICE_READY_TEMPLATE_ID=d-xxxxx
SENDGRID_INVOICE_PAID_TEMPLATE_ID=d-xxxxx
SENDGRID_PAYMENT_REMINDER_TEMPLATE_ID=d-xxxxx
SENDGRID_NEW_USER_WELCOME_TEMPLATE_ID=d-xxxxx
SENDGRID_PASSWORD_RESET_TEMPLATE_ID=d-xxxxx
SENDGRID_ADMIN_ALERT_TEMPLATE_ID=d-xxxxx

# OR: Generic SMTP Configuration (alternative to SendGrid)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# OPTIONAL SERVICES
# ===========================================

# Sentry Error Tracking (get from https://sentry.io)
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug mode (set to False in production)
DEBUG=False

# Python version (for Render)
PYTHON_VERSION=3.11.13

# Web concurrency (number of Gunicorn workers)
WEB_CONCURRENCY=4
