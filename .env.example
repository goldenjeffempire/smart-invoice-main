# Smart Invoice - Environment Configuration Example
# Copy this file to .env and update with your actual values

# ====================================
# Django Core Settings
# ====================================
DEBUG=True
SECRET_KEY=django-insecure-dev-key-CHANGE-IN-PRODUCTION

# ====================================
# Database Configuration
# ====================================
# For local development, leave blank to use SQLite
# For production, set to PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/smartinvoice

# ====================================
# Security Settings
# ====================================
# Comma-separated domains (no protocol, no trailing slash)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# Comma-separated origins (include protocol)
CSRF_TRUSTED_ORIGINS=https://*.yourdomain.com,https://*.render.com,https://*.replit.dev

# Encryption salt for sensitive data (generate a random value and keep it secret)
ENCRYPTION_SALT=your-random-32-character-salt-value-here-keep-secret

# ====================================
# Email Configuration (SMTP)
# ====================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=Smart Invoice <noreply@smartinvoice.com>

# ====================================
# Optional Services
# ====================================

# Sentry for error tracking (production)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Redis for caching and session storage
# REDIS_URL=redis://localhost:6379/0

# AWS S3 for media file storage
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# USE_S3=False

# ====================================
# Feature Flags
# ====================================
# ENABLE_RECURRING_INVOICES=True
# ENABLE_MULTI_CURRENCY=True
# ENABLE_ANALYTICS=True
