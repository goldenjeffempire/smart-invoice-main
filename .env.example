# InvoiceFlow Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Core Settings
# =============================================================================
SECRET_KEY=your-secret-key-here-generate-with-django-get-random-secret-key
DATABASE_URL=postgres://user:password@localhost:5432/invoiceflow
ENCRYPTION_SALT=your-encryption-salt-generate-with-secrets-token-hex-32

# =============================================================================
# OPTIONAL: Server Configuration
# =============================================================================
DEBUG=False
ALLOWED_HOSTS=invoiceflow.com.ng,www.invoiceflow.com.ng

# =============================================================================
# OPTIONAL: Email Configuration (SendGrid recommended)
# =============================================================================
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@invoiceflow.com.ng

# =============================================================================
# OPTIONAL: Security Features
# =============================================================================
HCAPTCHA_SITEKEY=your-hcaptcha-site-key
HCAPTCHA_SECRET=your-hcaptcha-secret-key

# =============================================================================
# OPTIONAL: Payment Processing
# =============================================================================
PAYSTACK_SECRET_KEY=your-paystack-secret-key

# =============================================================================
# OPTIONAL: Error Tracking
# =============================================================================
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# OPTIONAL: Docker Compose Settings
# =============================================================================
POSTGRES_PASSWORD=your-secure-postgres-password
