# Smart Invoice - Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real secrets to version control

# ===========================================
# REQUIRED FOR PRODUCTION
# ===========================================

# Django Secret Key (REQUIRED)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Encryption salt for sensitive data like bank account numbers (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_SALT=your-64-byte-encryption-salt-here-CHANGE-THIS-IN-PRODUCTION

# Allowed Hosts (comma-separated domains, REQUIRED in production)
# Example: smart-invoice-k2oj.onrender.com,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database URL (PostgreSQL, automatically provided by Render)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/smartinvoice

# Debug mode (MUST be False in production)
DEBUG=False

# ===========================================
# SECURITY & CSRF
# ===========================================

# CSRF Trusted Origins (comma-separated with https://)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://*.onrender.com,https://*.replit.dev

# ===========================================
# EMAIL CONFIGURATION (SendGrid Recommended)
# ===========================================

# SendGrid API Key (get from https://sendgrid.com)
SENDGRID_API_KEY=your-sendgrid-api-key

# SendGrid From Email (must be verified in SendGrid)
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# SendGrid Template IDs (optional, for branded emails)
SENDGRID_INVOICE_READY_TEMPLATE_ID=d-xxxxx
SENDGRID_INVOICE_PAID_TEMPLATE_ID=d-xxxxx
SENDGRID_PAYMENT_REMINDER_TEMPLATE_ID=d-xxxxx
SENDGRID_NEW_USER_WELCOME_TEMPLATE_ID=d-xxxxx
SENDGRID_PASSWORD_RESET_TEMPLATE_ID=d-xxxxx
SENDGRID_ADMIN_ALERT_TEMPLATE_ID=d-xxxxx

# Alternative: Generic SMTP Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# ERROR MONITORING (Highly Recommended)
# ===========================================

# Sentry Error Tracking (get from https://sentry.io)
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# ===========================================
# DEPLOYMENT SETTINGS (Render)
# ===========================================

# Python version
PYTHON_VERSION=3.11.13

# Web concurrency (Gunicorn workers, typically 2-4 * CPU cores)
WEB_CONCURRENCY=4
